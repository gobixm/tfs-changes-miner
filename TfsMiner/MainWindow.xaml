<Window x:Class="TfsMiner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TfsMiner"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnMine" Content="Mine" Margin="95,10,10,0" Click="mine_Click" RenderTransformOrigin="0.476,0.618" Height="86" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Progress" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Status" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top"/>
        <Label x:Name="progressLabel" Content="0" HorizontalAlignment="Left" Margin="95,101,0,0" VerticalAlignment="Top"/>
        <Label x:Name="statusLabel" Content="" Margin="95,132,10,10"/>
        <Button x:Name="btnConfig" Content="Edit Config" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.467,-0.4" Height="86" Click="btnConfig_Click"/>

    </Grid>
</Window>
